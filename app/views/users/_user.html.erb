<span class="user">
  <span class="user-avatar">
    <%= image_tag user_avatar(user), class: "img-icon me-1" %>
  </span>
  <span class="user-name me-1">
    <% if request.path == user_path(user) %>
      <%= user.name %>
    <% else %>
      <%= link_to user.name, user_path(user) %>
    <% end %>
  </span>
</span>
