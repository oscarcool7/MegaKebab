<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user), class: "mt-3 img-fluid" %>

  <% if @user == current_user %>
    <p class="mt-4">
      <%= link_to t("views.users.update.action"), edit_user_path(@user), class: "btn btn-primary" %>
    </p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3>Организовал:</h3>
        <div class="row">
          <%= render partial: "events/event", collection: @user.events %>
        </div>
      <% else %>
        <p class="mt-3">Пользователь пока не организовал ни одного события</p>
      <% end %>
    </div>
  </div>
</div>
