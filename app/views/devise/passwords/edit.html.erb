<h2>Изменить пароль</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="col-md-4 mt-4">
    <%= f.label :password, t("views.users.password.edit.new_password"), class: "fw-bold" %>
    <% if @minimum_password_length %>
      <em>(Не менее <%= @minimum_password_length %> символов)</em>
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="col-md-4 fw-bold mt-3">
    <%= f.label :password_confirmation, t("views.users.password.edit.confirm_password") %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="my-3">
    <%= f.submit t("views.buttons.change_password"), class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
