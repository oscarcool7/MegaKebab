<div class="col-sm-6 col-md-4">
  <div class="card thumbnail mb-3">

    <%= content_tag "div", "", class: "event-background",
      style: "background-image: url(#{asset_path("event.jpg")})" %>

    <div class="thumbnail-inner event-info-inner">
      <div class="card-body">
        <div class="event-description">
          <div class="card-title">
            <h3><%= link_to event.title, event_path(event) %></h3>
          </div>

          <div class="card-text">
            <h4><small><%= l event.datetime, format: :long %></small></h4>
            <div class="mt-2"><%= event.address %></div>
          </div>
        </div>
      </div>

      <div>
        <% event.visitors.each do |user| %>
          <%= image_tag user_avatar(user), class: "img-icon mx-1 mb-2", title: user.name %>
        <% end %>
      </div>
    </div>
  </div>
</div>
